{
  "extends": "@adonisjs/tsconfig/tsconfig.client.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "ESNext",
    "jsxImportSource": "vue",
    "paths": {
      "~/*": ["./*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": [
    "**/*",
    "../app/**/*",
    "../resources/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "**/*.spec.ts"
  ]
}